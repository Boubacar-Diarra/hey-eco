@page "/"
@namespace Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hey-Eco</title>
    <base href="~/" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/img/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/favicon/favicon-16x16.png">
    @*    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />*@
    <link href="css/site.css" rel="stylesheet" />
    @*add of mudBlazor*@
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />

    @*Add of google font*@
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Parisienne&family=Varela+Round&display=swap" rel="stylesheet">

    @*Add of google adsence*@


    @*Add off leaflet.js*@
    <script defer src="~/js/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
          integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A=="
          crossorigin="" />
    <script defer src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
            integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
            crossorigin=""></script>

    <style>
        body {
            font-family: 'Varela Round', sans-serif;
            background-color: #F5F7FB;
        }

        .parisienne-font {
            font-family: 'Parisienne', cursive;
        }

        .varela-round-font {
            font-family: 'Varela Round', sans-serif;
        }

        .layout-bg {
            background-color: #F5F7FB;
            min-height: 100vh;
            padding-bottom: 20vh;
        }

        .header {
            box-shadow: 0px 4px 15px rgba(21, 48, 147, 0.05);
            backdrop-filter: blur(2px);
            background-color: rgba(255,255,255,0.9);
        }

        .begin-post {
            background-color: rgba(21, 48, 147, 0.9);
            box-shadow: 0 4px 15px rgba(21, 48, 147, 0.05);
            border-radius: 12px;
            height: 50px;
            margin-bottom: 5px;
            color: whitesmoke;
            font-size: 1.5em;
            font-family: Parisienne,serif;
            padding: 10px 30px;
            display: flex;
            align-items: center;
            transition: 0.25s;
            cursor: pointer;
        }

        .new-post-zone {
            background: #FFFFFF;
            box-shadow: 0 4px 15px rgba(21, 48, 147, 0.05);
            border-radius: 12px;
            width: 100%;
            padding: 30px;
        }

        .add-icon {
            color: rgba(21, 48, 147, 1);
            height: 35px;
            border: 0.5px solid rgba(21, 48, 147, 0.5);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: space-around;
            padding-left: 10px;
        }

        .offer-content {
            background: #FFFFFF;
            box-shadow: 0 4px 15px rgba(21, 48, 147, 0.05);
            border-radius: 12px;
        }

        .add-offer-card {
            background: #FFFFFF;
            box-shadow: 0 4px 15px rgba(21, 48, 147, 0.05);
            border-radius: 12px;
        }
        /*cet element est relatif a leaflet.js*/
        #map {
            box-shadow: 0 4px 15px rgba(21, 48, 147, 0.05);
            height: 300px;
        }
    </style>
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

<script src="_content/MudBlazor/MudBlazor.min.js"></script>
<script src="_framework/blazor.server.js"></script>
</body>
</html>
