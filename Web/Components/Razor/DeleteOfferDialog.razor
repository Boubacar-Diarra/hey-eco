<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3 mb-n1" />
            Supprimer l'offre?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudAlert Severity="Severity.Warning">Vous le vous vraiment supprimer cette offre ?</MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteOffer">Delete Server</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public long offerId { get; set; }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteOffer()
    {
        MudDialog.Close(DialogResult.Ok(offerId));
    }
}
